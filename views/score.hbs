<div class="container one-score-container  blue-grey lighten-5">
{{#each scores}}
<div class="row">
  <div class="col s10 offset-s1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text center-align">
        <span class="card-title">{{game_name}}</span>
        <div class="row">
          <div class="col s6 row">
            <div class="row">
              <div class="col s4">
                <h5>Team 1:</h5>
              </div>
              <div class="col s8 left-align">
                <h5>{{team_name}}</h5>
              </div>
            </div>
          <div id="score1"class="row">
            <div class="col s3">
              <h5>Score:</h5>
            </div>
            <div class="col s4 left-align">
              <h5>{{team1_score}}</h5>
            </div>
          </div>
        </div>
          <div class="col s6 row">
            <div class="row">
              <div class="col s4">
                <h5>Team 2:</h5>
              </div>
              <div class="col s8 left-align">
                <h5>{{team2_name}}</h5>
              </div>
            </div>
          <div id="score2"class="row">
            <div class="col s3">
              <h5>Score:</h5>
            </div>
            <div class="col s3 left-align">
              <h5>{{team2_score}}</h5>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="buttons"class="row">
  <div class="col s3 offset-s1">
    <a id="delete-button"class="waves-effect waves-light btn col s10 offset-s1 red">Delete</a>
  </div>
  <div id="confirm-button"class="col s3 offset-s1">
      <!-- <a id="submit-button"class="waves-effect waves-light btn col s4 pull-s4">Edit</a> -->
  </div>
  <div class="col s3">
    <a id="edit-button"class="waves-effect waves-light btn col s10 offset-s1">Edit</a>
  </div>
</div>
{{/each}}
</div>
<script src="/javascripts/score.js" charset="utf-8"></script>
